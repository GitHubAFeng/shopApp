<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/top_view1"
        android:padding="@dimen/dp5"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/dp130"
            android:layout_height="@dimen/dp23"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp10"

            android:background="@drawable/jxpphh"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp28"
            android:id="@+id/seach"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp20"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="match_parent"
                android:alpha="0.3"
                android:background="@color/black"
                android:layout_height="@dimen/dp28" />

            <ImageView
                android:id="@+id/seach_img"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/sousuo_fangdajing"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/seach_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp20"
                android:textColor="@color/white"
                android:text="搜宝贝 来领券"

                />
        </RelativeLayout>

    </LinearLayout>



<LinearLayout
    android:layout_below="@+id/topview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd" />
    <LinearLayout
        android:id="@+id/layout_loadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10">

        <ProgressBar
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="加载中"
            android:textSize="@dimen/sp12" />
    </LinearLayout>
</LinearLayout>
    
    <RelativeLayout
        android:id="@+id/xuanfu_go"
        android:layout_width="@dimen/dp40"
        android:background="@drawable/shape_black_radius"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:alpha="0.7"

        android:visibility="gone"
        android:gravity="center"
        android:layout_height="@dimen/dp40">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/num_layout"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/num"
                android:textColor="@color/white"
                android:text="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="@dimen/dp25"
                android:background="@color/white"
                android:layout_height="@dimen/dp1" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/num_total"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:id="@+id/go_top_img"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/go_top_white"/>

    </RelativeLayout>
</RelativeLayout>
