<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--轮播-->
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:indicator_drawable_selected="@drawable/indicator_drawable_selected" />

    <!--按钮组-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFF">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" />

    </RelativeLayout>

    <!--今日必买-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="@dimen/dp5"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日必抢"
                android:textColor="#585858"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="BEST PICKS"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_hot_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.9超划算"
                    android:textColor="#FF5A64"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/home_hot_desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小白鞋清洁剂￥9.9"
                    android:textColor="#C0C0C0"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/home_hot_img_1"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:src="@drawable/shangpintupian_moren"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F4F3F8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_hot_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排行榜"
                    android:textColor="#FE8D63"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/home_hot_desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超高性价比商品"
                    android:textColor="#C0C0C0"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/home_hot_img_2"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:src="@drawable/shangpintupian_moren"
                    />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F4F3F8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_hot_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌优选"
                    android:textColor="#CE76F5"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/home_hot_desc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为您推荐优质好货"
                    android:textColor="#C0C0C0"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/home_hot_img_3"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:src="@drawable/shangpintupian_moren"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <!--表头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@drawable/home_star"
            android:layout_marginRight="@dimen/dp8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精选口碑好货"
            android:textColor="#585858"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>